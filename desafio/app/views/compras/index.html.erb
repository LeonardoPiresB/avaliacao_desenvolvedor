<h1>Listando Compras</h1>
<table id="tipo1" style="width:100%">
  <thead>
    <tr>
      <th>Comprador</th>
      <th>Descricao</th>
      <th>Preco &Uacute;nico</th>
      <th>Quantidade</th>
      <th>Preco Total</th>
      <th>Endereco</th>
      <th>Fornecedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.comprador %></td>
        <td><%= compra.descricao %></td>
        <td>R$ <%= compra.preco %></td>
        <td><%= compra.quantidade %></td>
        <td>R$ <%= compra.quantidade * compra.preco %></td>
        <td><%= compra.endereco %></td>
        <td><%= compra.fornecedor %></td>
        <td><%= link_to 'Abrir', compra %></td>
        <td><%= link_to 'Editar', edit_compra_path(compra) %></td>
        <td><%= link_to 'Excluir', compra, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
    <% if !@compras.empty? %>
      <tr>
        <td colspan="4" align="right"><b>Receita Bruta Total</b></td>
        <td>R$ <%= @receitabruta %></td>
        <td colspan="5"></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar Compra', new_compra_path %>
